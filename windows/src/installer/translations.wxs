<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include properties.wxi ?>
  
  <Fragment>
    <ComponentGroup Id="TranslationsComponentGroup" Directory="POFOLDER">
      <Component Id="GermanPOComponent" Win64="$(var.Win64)">
	<File Id="GermanPO" Name="de.po" DiskId="1" Source="$(var.PODir)\de.po" KeyPath="yes" />
      </Component>
      <Component Id="FrenchPOComponent" Win64="$(var.Win64)">
	<File Id="FrenchPO" Name="fr.po" DiskId="1" Source="$(var.PODir)\fr.po" KeyPath="yes" />
      </Component>
      <Component Id="RussianPOComponent" Win64="$(var.Win64)">
	<File Id="RussianPO" Name="ru.po" DiskId="1" Source="$(var.PODir)\ru.po" KeyPath="yes" />
      </Component>
      <Component Id="UkrainianPOComponent" Win64="$(var.Win64)">
	<File Id="UkrainianPO" Name="uk.po" DiskId="1" Source="$(var.PODir)\uk.po" KeyPath="yes" />
      </Component>
      <Component Id="TrChinesePOComponent" Win64="$(var.Win64)">
	<File Id="TrChinesePO" Name="zh_TW.po" DiskId="1" Source="$(var.PODir)\zh_TW.po" KeyPath="yes" />
      </Component>
    </ComponentGroup>
    <ComponentGroup Id="RegionalConfFilesComponentGroup" Directory="CONFIGFOLDER">
      <Component Id="TrChineseRCComponent" Win64="$(var.Win64)">
	<File Id="TrChineseRC" Name="joerc.zh_TW" DiskId="1" Source="$(var.ConfRootDir)\joerc.zh_TW" KeyPath="yes" />
      </Component>      
    </ComponentGroup>
  </Fragment>
</Wix>